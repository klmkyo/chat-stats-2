{
  "extends": ["expo/tsconfig.base", "../../tsconfig.json"],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/modules/*": ["./modules/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "drizzle/migrations.js",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
